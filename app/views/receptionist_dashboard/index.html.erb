<div class="min-h-screen bg-gray-100 p-8">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-extrabold text-gray-800 mb-8">Receptionist Dashboard</h1>

    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-semibold text-gray-700">Patient Records</h2>
      <%= link_to "âž• New Patient", new_patient_path, class: "px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition" %>
    </div>

    <div class="overflow-x-auto bg-white rounded-lg shadow">
      <table class="w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <% ["Name", "Age", "Gender", "Contact", "Address", "Actions"].each do |head| %>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider"><%= head %></th>
            <% end %>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% Patient.all.each do |patient| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-6 py-4 text-sm text-gray-800"><%= patient.name %></td>
              <td class="px-6 py-4 text-sm text-gray-800"><%= patient.age %></td>
              <td class="px-6 py-4 text-sm text-gray-800"><%= patient.gender %></td>
              <td class="px-6 py-4 text-sm text-gray-800"><%= patient.contact %></td>
              <td class="px-6 py-4 text-sm text-gray-800"><%= patient.address %></td>
              <td class="px-6 py-4 text-right space-x-2">
                <%= link_to "Show", patient_path(patient), class: "text-blue-600 hover:underline" %>
                <%= link_to "Edit", edit_patient_path(patient), class: "text-yellow-600 hover:underline" %>
                <%= link_to "Delete", patient_path(patient), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
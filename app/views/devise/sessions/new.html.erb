<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Login to Medical Portal</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Log in", class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600">
      Donâ€™t have an account?
      <%= link_to "Sign up", new_user_registration_path, class: "text-indigo-600 hover:underline" %>
    </div>
  </div>
</div>
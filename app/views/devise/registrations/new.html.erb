<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="bg-white shadow-md rounded-lg p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-indigo-700 mb-6">Create an Account</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :name, class: "block text-gray-700 mb-1" %>
        <%= f.text_field :name, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :role, class: "block text-gray-700 mb-1" %>
        <%= f.select :role, options_for_select([["Receptionist", "receptionist"], ["Doctor", "doctor"]]), {}, class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Sign Up", class: "w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600">
      Already have an account?
      <%= link_to "Log in", new_user_session_path, class: "text-indigo-600 hover:underline" %>
    </div>
  </div>
</div>
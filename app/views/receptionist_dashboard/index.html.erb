<div class="min-h-screen bg-gray-50 py-10 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row justify-between items-center mb-10">
    </div>

    <!-- Patient Grid -->
    <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
      <% @patients.each do |patient| %>
        <div class="bg-white p-5 rounded-2xl shadow-md hover:shadow-lg transition duration-300 border border-gray-100">
          <!-- Avatar and Name -->
          <div class="flex items-center space-x-4 mb-4">
            <div class="w-14 h-14">
              <img src="https://ui-avatars.com/api/?name=<%= ERB::Util.url_encode(patient.name) %>&background=random&bold=true&size=128" alt="avatar" class="rounded-full w-full h-full object-cover shadow-sm">
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-lg font-semibold text-gray-900 truncate"><%= patient.name %></p>
              <p class="text-sm text-gray-500 truncate">Age: <%= patient.age.presence || "N/A" %> | <%= patient.gender.presence || "N/A" %></p>
            </div>
          </div>

          <!-- Address -->
          <p class="text-sm text-gray-400 mb-2 truncate"><%= patient.address.presence || "No address available" %></p>

          <!-- Contact and Actions -->
          <div class="flex justify-between items-center text-sm text-gray-600">
            <div class="space-x-3">
              <%= link_to patient_path(patient), class: "text-blue-600 hover:text-blue-800", title: "View" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to edit_patient_path(patient), class: "text-yellow-500 hover:text-yellow-700", title: "Edit" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to patient_path(patient), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700", title: "Delete" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
            <span class="text-xs text-gray-400"><%= patient.contact.presence || "No contact" %></span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
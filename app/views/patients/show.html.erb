<div class="min-h-screen bg-gray-100 p-6">
  <div class="max-w-4xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-4">Patient Details</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-700">
      <div>
        <p class="font-semibold">Name:</p>
        <p><%= @patient.name %></p>
      </div>

      <div>
        <p class="font-semibold">Age:</p>
        <p><%= @patient.age %></p>
      </div>

      <div>
        <p class="font-semibold">Gender:</p>
        <p><%= @patient.gender %></p>
      </div>

      <div>
        <p class="font-semibold">Contact:</p>
        <p><%= @patient.contact %></p>
      </div>

      <div class="md:col-span-2">
        <p class="font-semibold">Address:</p>
        <p><%= @patient.address %></p>
      </div>
    </div>

    <div class="mt-6 flex space-x-4">
      <%= link_to "Edit", edit_patient_path(@patient), class: "bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-600" %>
      <%= link_to "Back", patients_path, class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
      <%= link_to "Delete", @patient, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
    </div>
  </div>
</div>